<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_style">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#2C2B47</item>
        <item name="android:textSize">39sp</item>
    </style>

    <style name="stye_subtitle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#B9B8C6</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="style_button">
        <item name="android:backgroundTint">#2C2B47</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFF1EF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_input">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColorHint">#2C2847</item>
        <item name="android:background">@drawable/ic_input_rectangle</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
</resources>