<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic__llustration_main" />

    <TextView
        android:id="@+id/text_title1"
        style="@style/title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:text="Learn at home!"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/text_subtitle1"
        style="@style/stye_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="efficiently and effectively"
        app:layout_constraintEnd_toEndOf="@+id/text_title1"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="@+id/text_title1"
        app:layout_constraintTop_toTopOf="@+id/text_title1" />

    <Button
        android:id="@+id/main_button"
        style="@style/style_button"
        android:layout_width="186dp"
        android:layout_height="58dp"
        android:layout_marginTop="64dp"
        android:text="Start Now"
        app:layout_constraintEnd_toEndOf="@+id/text_subtitle1"
        app:layout_constraintStart_toStartOf="@+id/text_subtitle1"
        app:layout_constraintTop_toBottomOf="@+id/text_subtitle1" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="@+id/main_button"
        app:layout_constraintStart_toStartOf="@+id/main_button"
        app:layout_constraintTop_toTopOf="@+id/main_button"
        app:srcCompat="@drawable/ic_rectangle" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>